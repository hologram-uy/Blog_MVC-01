@model SitioMVC.Models.Juegos

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center text-primary">Editar Juego</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container d-flex justify-content-center">
        <div class="w-50">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group row">
                @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "col-md-12 text-center fw-bold" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control text-center" } })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Genero, htmlAttributes: new { @class = "col-md-12 text-center fw-bold" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Genero, new { htmlAttributes = new { @class = "form-control text-center" } })
                    @Html.ValidationMessageFor(model => model.Genero, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Desarrollador, htmlAttributes: new { @class = "col-md-12 text-center fw-bold" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Desarrollador, new { htmlAttributes = new { @class = "form-control text-center" } })
                    @Html.ValidationMessageFor(model => model.Desarrollador, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.AnioLanzamiento, htmlAttributes: new { @class = "col-md-12 text-center fw-bold" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.AnioLanzamiento, new { htmlAttributes = new { @class = "form-control text-center" } })
                    @Html.ValidationMessageFor(model => model.AnioLanzamiento, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Plataforma, htmlAttributes: new { @class = "col-md-12 text-center fw-bold" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Plataforma, new { htmlAttributes = new { @class = "form-control text-center" } })
                    @Html.ValidationMessageFor(model => model.Plataforma, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mt-4 text-center">
                <button type="submit" class="btn btn-outline-success">Guardar</button>
                @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-outline-secondary" })
            </div>
        </div>
    </div>
}

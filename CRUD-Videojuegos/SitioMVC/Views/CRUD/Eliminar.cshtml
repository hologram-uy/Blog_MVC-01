@model SitioMVC.Models.Juegos

@{
    ViewBag.Title = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center text-danger">Eliminar el Juego</h2>

<div>
    <h3>Seguro querés eliminar este juego?</h3>
</div>

<div>
    <h4>Juegos</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Genero)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Genero)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Desarrollador)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Desarrollador)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AnioLanzamiento)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AnioLanzamiento)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Plataforma)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Plataforma)
        </dd>

    </dl>

    @using (Html.BeginForm("EliminarConfirmado", "CRUD", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.Id)

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-outline-danger" /> 
            @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-outline-secondary" })
        </div>
    }
</div>
